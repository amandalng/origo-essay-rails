<%= link_to "< back", user_essays_path(current_user), class: "back-btn" %>

<h2 class="mb-4">Assign Reviewer</h2>

<% if @essay.user %>
    <p>Current reviewer: <%= @essay.reviewer_name  %></p>
<% end %>

<%= simple_form_for @essay do |f| %>
  <%= f.input :user, label: 'Reviewer name', collection: @reviewer_names, include_blank: false, include_hidden: false %>

  <div class="center">
    <%= f.button :submit, 'Assign reviewer', method: "patch", class: "btn main-btn", "data-no-turbolink" => true %>
  </div>
<% end %>

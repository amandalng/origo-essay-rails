<h4 class="mb-4">Assign Reviewer</h4>

<% if @essay.user %>
    <p>Current reviewer: <%= @essay.reviewer_name  %></p>
<% end %>

<%= simple_form_for @essay do |f| %>
  <%= f.input :user, label: 'Reviewer name', collection: @reviewer_names %>

  <div class="center">
    <%= f.button :submit, 'Assign reviewer', class: "btn main-btn" %>
  </div>
<% end %>

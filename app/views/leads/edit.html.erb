<%= link_to "< back", :back, class: "back-btn" %>

<% if @lead.user.nil? %>
  <h2 class="mb-4">Assign PIC for <%= @lead.full_name %></h2>

  <%= simple_form_for @lead do |f| %>
    <%= f.input :user, label: "Administrator name", collection: @administrator_names, include_blank: false, include_hidden: false %>
    <div class="center">
      <%= f.button :submit, 'Assign', class: "btn main-btn" %>
    </div>
  <% end %>
<% else %>
  <h2 class="mb-4">Add notes for <%= @lead.full_name %></h2>

  <%= simple_form_for @lead do |f| %>
    <%= f.input :notes %>
    <div class="center">
      <%= f.button :submit, 'Add', class: "btn main-btn" %>
    </div>
  <% end %>
<% end %>

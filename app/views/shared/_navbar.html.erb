<% if user_signed_in? %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
     <%= link_to user_essays_path(current_user), class: "navbar-brand" do %>
        <!-- <img src="./../../assets/images/logo.png" alt="logo"> -->
        <img src="https://origoedu.com/images/logo.svg" alt="logo">
     <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav align-items-center mr-auto">
        <li class="nav-item">
          <%= link_to "Dashboard", user_essays_path(current_user), class: "nav-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to "Leads", user_leads_path(current_user), class: "nav-btn" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://www.greenecountyfoundation.org/wp-content/uploads/2019/09/Profile-Icon.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Edit Profile", "#", class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
<% else %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
     <%= link_to root_path, class: "navbar-brand" do %>
        <!-- <img src="./../../assets/images/logo.png" alt="logo"> -->
        <img src="https://origoedu.com/images/logo.svg" alt="logo">
     <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav align-items-center mr-auto">
        <li class="nav-item">
          <%= link_to "About", "https://origoedu.com/", target: "_blank", class: "nav-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to "Services", "https://origoedu.com/en/services", target: "_blank", class: "nav-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to "Pricing", pricing_essays_path, class: "nav-btn" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-btn" %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
